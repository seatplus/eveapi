{
    "name": "seatplus/eveapi",
    "description": "API for receiving information from esi",
    "license": "MIT",
    "authors": [
        {
            "name": "Felix Huber",
            "email": "felix.a.huber@gmx.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "Seatplus\\Eveapi\\": "src/"
        },
        "files": [
            "./src/Helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Seatplus\\Eveapi\\Tests\\": "tests/",
            "Seatplus\\Eveapi\\database\\factories\\": "src/database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "minimum-stability": "alpha",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-redis": "*",
        "laravel/framework": "^9.0",
        "laravel/horizon": "^5.0",
        "seatplus/esi-client": "^0.10.1",
        "doctrine/dbal": "^3.0",
        "spatie/data-transfer-object": "^3.7",
        "staudenmeir/laravel-cte": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "7.1.0",
        "nunomaduro/collision": "^6.1",
        "brianium/paratest": "^6.2",
        "itsgoingd/clockwork": "^5.0",
        "barryvdh/laravel-ide-helper": "^2.12",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.2"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Seatplus\\Eveapi\\EveapiServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "XDEBUG_MODE=coverage ./vendor/bin/pest --coverage",
        "parallel": "vendor/bin/testbench package:test --parallel --no-coverage"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
